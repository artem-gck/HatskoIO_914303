    {
      "UpstreamPathTemplate": "/gateway/users",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/users",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "user_info",
          "Port": 443
        }
      ],
      "DangerousAcceptAnyServerCertificateValidator": true
    },
